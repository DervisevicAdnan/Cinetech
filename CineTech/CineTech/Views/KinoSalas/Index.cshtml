@model IEnumerable<CineTech.Models.KinoSala>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brojRedova)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brojKolona)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brojRedova)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brojKolona)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> 
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a> 
                }
                <a asp-action="Details" asp-route-id="@item.id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
