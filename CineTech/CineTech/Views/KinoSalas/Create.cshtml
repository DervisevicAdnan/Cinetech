@model CineTech.Models.KinoSala

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create KinoSala</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="naziv" class="control-label">Naziv</label>
                    <input asp-for="naziv" class="form-control" />
                    <span asp-validation-for="naziv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="brojRedova" class="control-label">Broj Redova</label>
                    <input asp-for="brojRedova" class="form-control" />
                    <span asp-validation-for="brojRedova" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="brojKolona" class="control-label">Broj Kolona</label>
                    <input asp-for="brojKolona" class="form-control" />
                    <span asp-validation-for="brojKolona" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Nazad</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
