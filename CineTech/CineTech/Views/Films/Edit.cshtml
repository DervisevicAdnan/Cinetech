@model CineTech.Models.Film

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">Izmjenjivanje filma</h1>

<h4>Film</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="naziv" class="control-label font-weight-bold"></label>
                <input asp-for="naziv" class="form-control" />
                <span asp-validation-for="naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="naslovnaSlika" class="control-label font-weight-bold"></label>
                <input asp-for="naslovnaSlika" class="form-control" />
                <span asp-validation-for="naslovnaSlika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="opis" class="control-label font-weight-bold"></label>
                <input asp-for="opis" class="form-control" />
                <span asp-validation-for="opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="redatelj" class="control-label font-weight-bold"></label>
                <input asp-for="redatelj" class="form-control" />
                <span asp-validation-for="redatelj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="glumci" class="control-label font-weight-bold"></label>
                <input asp-for="glumci" class="form-control" />
                <span asp-validation-for="glumci" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="releseDate" class="control-label font-weight-bold"></label>
                <input asp-for="releseDate" class="form-control" />
                <span asp-validation-for="releseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="trailer" class="control-label font-weight-bold"></label>
                <input asp-for="trailer" class="form-control" />
                <span asp-validation-for="trailer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusPrikazivanja" class="control-label font-weight-bold"></label>
                <select asp-for="StatusPrikazivanja" class="form-control" asp-items="Html.GetEnumSelectList<StatusPrikazivanja>()"></select>
                <span asp-validation-for="StatusPrikazivanja" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="AdminFilmovi" class="btn btn-secondary ml-2">Nazad</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
