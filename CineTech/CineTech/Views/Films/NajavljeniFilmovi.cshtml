<div class="container">
    <div class="row">
    @foreach (var film in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="@film.naslovnaSlika" alt="@film.naziv" />
                <div class="card-body">
                    <h5 class="card-title">@film.naziv</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@film.redatelj</h6>
                    <p class="card-text">
                        <strong>Žanr:</strong> MORAM SKONTAT<br>
                        <strong>Release date:</strong> @film.releseDate<br>
                        <strong>Glumci:</strong> @film.glumci<br>
                        <strong>Opis:</strong> @film.opis
                    </p>
                </div>
                <div class="card-footer">
                    <a href="@film.trailer" class="btn btn-primary" target="_blank">Pogledaj trailer</a>
                @if (User.IsInRole("Administrator")) {
                    <a asp-action="Edit" asp-route-id="@film.id">Edit</a>
                    <a asp-action = "Delete" asp-route-id = "@film.id"> Delete </a>
                }
                    <a asp-action="Details" asp-route-id="@film.id"> Details </a>
                </div>
            </div>
        </div>
    }
    </div>
</div>
