@using Microsoft.AspNetCore.Identity
@using CineTech.Data
@using CineTech.Controllers
@using CineTech.Models

@model CineTech.Models.Ocjena

@{
    ViewData["Title"] = "Ocijeni Film";
}

<h1 class="display-4">Ocijeni Film</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="OcijeniFilm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="ocjenaFilma" class="control-label">Ocjena Filma</label>
                        <input asp-for="ocjenaFilma" class="form-control" min="1" max="5" step="1" type="number" />
                        <span asp-validation-for="ocjenaFilma" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="komentar" class="control-label">Komentar</label>
                        <textarea asp-for="komentar" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="komentar" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="korisnikId" class="control-label">Korisnik ID</label>
                        <input asp-for="korisnikId" value="@ViewBag.KorisnikId" class="form-control" readonly />
                        <span asp-validation-for="korisnikId" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="FilmId" value="@ViewBag.FilmId" />
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Ocijeni</button>
                        <a asp-controller="Films" asp-action="Details" asp-route-id="@ViewBag.FilmId" class="btn btn-secondary ml-2">Povratak na film</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
