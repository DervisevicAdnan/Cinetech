@model CineTech.Models.Notifikacija

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Notifikacija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KorisnikId" class="control-label"></label>
                <select asp-for="KorisnikId" class ="form-control" asp-items="ViewBag.KorisnikId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PeriodNotifikacije" class="control-label"></label>
                <select asp-for="PeriodNotifikacije" class="form-control" asp-items="Html.GetEnumSelectList<PeriodNotifikacije>()"></select>
                <span asp-validation-for="PeriodNotifikacije" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusNotifikacije" class="control-label"></label>
                <select asp-for="StatusNotifikacije" class="form-control" asp-items="Html.GetEnumSelectList<StatusPrikazivanja>()"></select>
                <span asp-validation-for="StatusNotifikacije" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
