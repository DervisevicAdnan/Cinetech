@model CineTech.Models.Notifikacija

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Notifikacija</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <input type="hidden" name="filmId" value="@ViewBag.proslijedi" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Korisnik ID</label>
                <input value="@ViewBag.username" class="form-control" readonly />
                <span class="text-danger"></span>
            </div>
            <input asp-for="KorisnikId" type="hidden" value="@ViewBag.korisnikId" />
            <div class="form-group">
                <label asp-for="PeriodNotifikacije" class="control-label">Period Notifikacije</label>
                <select asp-for="PeriodNotifikacije" class="form-control" asp-items="Html.GetEnumSelectList<PeriodNotifikacije>()">
                    <option value="">Odaberite period</option>
                </select>
                <span asp-validation-for="PeriodNotifikacije" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Natrag na početnu</a>
            </div>
        </form>
    </div>
</div>
