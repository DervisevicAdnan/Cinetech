@model CineTech.Models.Notifikacija

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Notifikacija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="KorisnikId" class="control-label"></label>
                <input asp-for="KorisnikId" class="form-control" placeholder="Unesite ID korisnika" />
                <span asp-validation-for="KorisnikId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeriodNotifikacije" class="control-label"></label>
                <select asp-for="PeriodNotifikacije" asp-items="Html.GetEnumSelectList<PeriodNotifikacije>()" class="form-control">
                    <option value="">-- Select Period --</option>
                </select>
                <span asp-validation-for="PeriodNotifikacije" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusNotifikacije" class="control-label"></label>
                <select asp-for="StatusNotifikacije" asp-items="Html.GetEnumSelectList<StatusNotifikacije>()" class="form-control">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="StatusNotifikacije" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
