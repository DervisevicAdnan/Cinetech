@model IEnumerable<CineTech.Models.Projekcija>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4">Projekcije Filmova</h1>

@if (User.IsInRole("Administrator"))
{
    <div class="text-center mb-4">
        <a class="btn btn-success" asp-action="Create">Dodaj novu projekciju</a>
    </div>
}

<div class="container">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.datum)</th>
                <th>@Html.DisplayNameFor(model => model.vrijeme)</th>
                <th>@Html.DisplayNameFor(model => model.cijenaOsnovneKarte)</th>
                <th>@Html.DisplayNameFor(model => model.kinoSalaId)</th>
                <th>@Html.DisplayNameFor(model => model.filmId)</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.datum)</td>
                    <td>@Html.DisplayFor(modelItem => item.vrijeme)</td>
                    <td>@Html.DisplayFor(modelItem => item.cijenaOsnovneKarte)</td>
                    <td>@Html.DisplayFor(modelItem => item.kinoSalaId)</td>
                    <td>@Html.DisplayFor(modelItem => item.filmId)</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.id">Detalji</a>
                        @if (User.IsInRole("Administrator"))
                        {
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.id">Uredi</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.id">Obriši</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
    }
    .btn {
        margin: 0 5px;
    }
    .table {
        margin-top: 20px;
    }
    .thead-dark th {
        background-color: #343a40;
        color: white;
    }
    .container {
        max-width: 80%;
    }
</style>
