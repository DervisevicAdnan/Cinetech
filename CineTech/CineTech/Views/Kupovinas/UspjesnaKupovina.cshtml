        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item1.vrijeme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item1.vrijeme)
        </dd>
        <dt class = "col-sm-2">
