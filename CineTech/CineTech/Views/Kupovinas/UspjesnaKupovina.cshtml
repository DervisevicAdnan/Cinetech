@model Tuple<Kupovina, List<ZauzetaSjedista>, string, string, double>

@{
    ViewData["Title"] = "Uspješna transakcija";
    var kupovina = Model.Item1;
    var zauzetaSjedista = Model.Item2;
    var nazivFilma = Model.Item3;
    var nazivSale = Model.Item4;
    double cijena = Model.Item2.Count * Model.Item5;
}

<h1 class="text-center my-4">Uspješna transakcija</h1>

<div class="container">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Vaša kupovina</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Datum i vrijeme</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Item1.datum) @Html.DisplayFor(model => model.Item1.vrijeme)</dd>

                <dt class="col-sm-4">Korisnik ID</dt>
                <dd class="col-sm-8">@kupovina.KorisnikId</dd>

                <dt class="col-sm-4">Naziv filma</dt>
                <dd class="col-sm-8">@nazivFilma</dd>

                <dt class="col-sm-4">Kino sala</dt>
                <dd class="col-sm-8">@nazivSale</dd>

                <dt class="col-sm-4">Cijena</dt>
                <dd class="col-sm-8">@cijena</dd>
            </dl>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Zauzeta sjedišta</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Red</th>
                        <th>Redni broj</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sjediste in zauzetaSjedista)
                    {
                        <tr>
                            <td>@sjediste.red</td>
                            <td>@sjediste.redniBrojSjedista</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        @if (User.IsInRole("Administrator"))
        {
            <a asp-action="Edit" asp-route-id="@kupovina.id" class="btn btn-warning mx-2">Edit</a>
        }
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mx-2">Nazad na početnu</a>
    </div>
</div>
