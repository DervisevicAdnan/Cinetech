@model CineTech.Models.Kupovina

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4>Kupovina</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="cijena" class="control-label">Cijena</label>
                    <input asp-for="cijena" value="@ViewBag.cijena" class="form-control" readonly />
                    <span asp-validation-for="cijena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="KorisnikId" class="control-label">KorisnikId</label>
                    <input type="hidden" asp-for="KorisnikId" value="@ViewBag.KorisnikId" class="form-control" />
                    <span asp-validation-for="KorisnikId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
